<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package = "com.resttechsoutions.hibernatetutorial.domain">
    <class name="Categorias" table="CATEGORIAS" schema="PEDIDOS">
        <id name="categoriaId" column="CATEGORIAID">
            <generator class="increment"/>
        </id>
        <property name="nombreCat"/>
    </class>
</hibernate-mapping>